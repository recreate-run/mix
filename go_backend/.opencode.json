{
  "$schema": "./opencode-schema.json",
  "agents": {
    "main": {
      "model": "azure.gpt-4.1-mini",
      "maxTokens": 4096
    },
    "sub": {
      "model": "azure.gpt-4.1-mini", 
      "maxTokens": 2048
    }
  },
  "mcpServers": {
    "blender": {
          "type": "stdio",
          "command": "uvx",
          "allowedTools": ["execute_blender_code"],
          "args": [
            "blender-mcp"
          ],
          "env": []
        }
  }
}

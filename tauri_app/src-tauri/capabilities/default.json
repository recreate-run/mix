{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:default",
    "macos-permissions:default",
    "shell:allow-spawn",
    "dialog:allow-confirm",
    "dialog:default",
    {
      "identifier": "shell:allow-execute",
      "allow": []
    },
    "fs:default",
    "fs:allow-read-dir",
    "fs:allow-exists",
    {
      "identifier": "fs:allow-read-file",
      "allow": [{ "path": "$HOME/**/*" }]
    }
  ]
}

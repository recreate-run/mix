{
  "identifier": "desktop-capability",
  "platforms": ["macOS", "windows", "linux"],
  "windows": ["main"],
  "permissions": [
    "global-shortcut:default",
    "core:window:default",
    "core:window:allow-start-dragging",
    "fs:default",
    "fs:allow-exists",
    "dialog:allow-open",
    {
      "identifier": "fs:allow-read-dir",
      "allow": [{ "path": "$HOME/**/*" }]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [{ "path": "$HOME/**/*" }]
    }
  ]
}
